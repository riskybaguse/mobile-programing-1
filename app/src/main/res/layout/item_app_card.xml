<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="@dimen/app_card_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:src="@drawable/fcmobile"
            android:layout_width="@dimen/app_card_size"
            android:layout_height="@dimen/app_card_size"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_category"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FC Mobile"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/padding_medium">

        <ImageView
            android:src="@drawable/coc"
            android:layout_width="@dimen/app_card_size"
            android:layout_height="@dimen/app_card_size"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_category"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clash Of Clans"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/padding_medium">

        <ImageView
            android:src="@drawable/roblox"
            android:layout_width="@dimen/app_card_size"
            android:layout_height="@dimen/app_card_size"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_category"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roblox"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/padding_medium">

        <ImageView
            android:src="@drawable/efootball"
            android:layout_width="@dimen/app_card_size"
            android:layout_height="@dimen/app_card_size"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_category"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Efootball"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/padding_medium">

        <ImageView
            android:src="@drawable/gta"
            android:layout_width="@dimen/app_card_size"
            android:layout_height="@dimen/app_card_size"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_category"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GTA"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/padding_medium">

        <ImageView
            android:src="@drawable/freefire"
            android:layout_width="@dimen/app_card_size"
            android:layout_height="@dimen/app_card_size"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_category"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free Fire"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/padding_medium">

        <ImageView
            android:src="@drawable/mobilelegends"
            android:layout_width="@dimen/app_card_size"
            android:layout_height="@dimen/app_card_size"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_category"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Legends"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/padding_medium">

        <ImageView
            android:src="@drawable/subwaysurfer"
            android:layout_width="@dimen/app_card_size"
            android:layout_height="@dimen/app_card_size"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_category"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subway Surfer"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>


</LinearLayout>