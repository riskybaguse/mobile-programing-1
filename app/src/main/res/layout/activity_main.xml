<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/text_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<!--        HEADER Cuy + ntar tambahin Button garis 3-->
        <LinearLayout
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginStart="8dp"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                />

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="3dp"
                />

        </LinearLayout>

<!--        Bagian Layout Kategori-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_large">

<!--            Row Kategori Pertama : 2 kolom-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

<!--                APPS-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/category_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <TextView
                        style="@style/CatergoryText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/apps"
                        android:background="@color/green"/>

                </LinearLayout>

<!--                GAMES-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/category_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <TextView
                        style="@style/CatergoryText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/games"
                        android:background="@color/teal_700"
                        />

                </LinearLayout>

            </LinearLayout>

<!--            Row Kategori Kedua : 2 kolom-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/app_card_margin"
                >

<!--                MOVIE & TV-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/category_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <TextView
                        style="@style/CatergoryText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/movies_tv"
                        android:background="@color/red"/>

                </LinearLayout>

<!--                MUSIC-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/category_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/CatergoryText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/orange"
                        android:gravity="center"
                        android:text="@string/music" />

                </LinearLayout>

            </LinearLayout>

<!--            Row Kategori Ketiga : 2 kolom-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/app_card_margin"
                >

<!--                BOOKS-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/category_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <TextView
                        style="@style/CatergoryText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/books"
                        android:background="@color/blue"/>

                </LinearLayout>

<!--                NEWS-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/category_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <TextView
                        style="@style/CatergoryText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/news"
                        android:background="@color/blue_dark"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--            Section Popular Apps + MORE-->
        <LinearLayout
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/popular"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:padding="@dimen/padding_medium"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btn_more_popular"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:background="@color/green"
                android:textColor="@color/text_primary"
                android:textAllCaps="true"/>

        </LinearLayout>

<!--        Horizontal scroll App Games-->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/padding_large"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include layout="@layout/item_app_card"/>

            </LinearLayout>

        </HorizontalScrollView>

<!--        NEW UPDATE APP-->
        <LinearLayout
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/new_update"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:padding="@dimen/padding_medium"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btn_more_app"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:text="@string/more"
                android:textAllCaps="true"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/padding_large">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <include layout="@layout/item_app_card"/>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>



</ScrollView>